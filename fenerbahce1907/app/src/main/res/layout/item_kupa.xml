<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/kupa_card_bg"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/kupaIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_trophy"
        android:contentDescription="Kupa İkonu"
        app:tint="#001F54"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/kupaSayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textStyle="bold"
        android:textColor="#001F54"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kupaAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kupa Adı"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout> <!-- Bu kapanış eksikti -->
